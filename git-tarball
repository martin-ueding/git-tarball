#!/bin/bash
# Copyright © 2012 Martin Ueding <dev@martin-ueding.de>

set -e
set -u

destination="$1"

shift

cwd="$(pwd)"

for repo in "$@"
do
	cd "$cwd"

	cd "$repo"

	if [[ ! -d .git ]]
	then
		echo "Warning: $repo is not a git repository, skipping…"
		continue
	fi

	tags=$(git tag)

	if [[ -z "$tags" ]]
	then
		echo "Warning: $repo has no tags, skipping…"
		continue
	fi

	for tag in $tags
	do
		echo "Processing $tag…"
	done
done
